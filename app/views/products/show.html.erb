<!-- <p id="notice"><%= notice %></p> -->
<div class="col-md-9">
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %><br>

                <div class="thumbnail">
                    <%= image_tag(@product.image_url, class: "img-responsive") %>
                    <div class="caption-full">
                        <h4 class="pull-right"><%= @product.formatted_price %></h4>
                        <h4><a href="#"><%= @product.name %></a>
                        </h4>
                        <p><%= @product.description %></p>
                    </div>
                    <div class="ratings">
                        <p class="pull-right"><%= @product.reviews.length %> Review(s)</p>
                        <p><%= link_to "Add To Cart", add_item_path(@product), method: :post %></p>
                    </div>
                </div>

                <div class="well">

                    <div class="text-right">
                        <%= render 'reviews/form' %>
                    </div>

                    <hr>
                    <% @product.reviews.each do |review| %>

                    <div class="row">
                        <div class="col-md-12">
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star-empty"></span>
                            Anonymous
                            <span class="pull-right">Added on: <%= review.created_at %></span>
                            <p><%= review.comment %></p>
                        </div>
                    </div>

                    <hr>
                    <% end %>





                </div>

            </div>
