    <!-- Page Content -->
    <div class="container">

      <header class="butts">
          <img src="https://heavyeditorial.files.wordpress.com/2010/06/animals-fighting-1.jpg" id="top-image">
          <div id="heading">
                  <h1>Welcome to DOINKLR!</h1>
              <p>Doinklr is the world's happiest wild aminal adoption service. If we don't have it, we'll hunt it. We have a wide selection of aminals including 7 of the world's top 10 predators, all well fed and house broken.  </p></div>

              </header>

              <hr>
              <% if user_signed_in? %>

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Shop!</p>
                <div class="list-group">
                    <a href="#" class="list-group-item">Adopt an Aminal</a>
                    <a href="#" class="list-group-item">Feed an Aminal</a>
                    <a href="#" class="list-group-item">Aminal Accessories</a>
                </div>
            </div>

            <div class="col-md-9">

                <div class="row carousel-holder">

                    <div class="col-md-12">
                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img class="slide-image" src="http://placehold.it/800x300" alt="">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src="http://placehold.it/800x300" alt="">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src="http://placehold.it/800x300" alt="">
                                </div>
                            </div>
                            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>
                    </div>

                </div>

                <div class="row">
                  <% @products.each do |product| %>


                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <!--<img src="http://placehold.it/320x150" alt="">-->
                            <img src="http://vignette2.wikia.nocookie.net/ofibty/images/6/69/Animals-fighting-2.jpg/revision/latest?cb=20130515190636">
                            <div class="caption">
                                <h4 class="pull-right">$<%= product.formatted_price %></h4>
                                <h4><%= link_to "#{product.name}", product %>
                                </h4>
                                <p><%= truncate product.description, length: 100 %></p>
                            </div>
                            <div class="ratings">
                                <p class="pull-right"><%= product.reviews.length %> Review(s)</p>
                                <p>
<!-- Review Stars
class="glyphicon glyphicon-star"
-->
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <% end %>

                </div>

            </div>

        </div>

    </div>
    <% else %>
    <p>
      Please sign up or login to use our services!!
    </p>
      <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
      <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
    <% end %>
    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy;2015 DOINKLR Glue Manufacturing LLC</p>
                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>
